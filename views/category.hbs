<div class="container">
    <div class="row">
        <!-- GET -->
        <div class="col-md-3">
            <h1>GET</h1>
            <div class="card">
                <div class="card-body">
                    <!--methode GET-->
                    <ul class="list-group list-group-flush">
                        {{#each categorie}}
                        <li class="list-group-item">
                           {{this.title}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- POST -->
        <div class="col-md-3">
            <h1>POST</h1>
            <div class="card">
                <div class="card-body">

                    <!--methode POST avec / pour url-->
                    <form method="POST" action="/category">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" type="text" name="title">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>

        <!-- PUT -->
        <div class="col-md-3">
            <h1>PUT</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <!--methode PUT-->
                            <!--pour handelbars-->
                            {{#each product}}
                            <!--pour handelbars this recuperer id et title pour product-->
                        <li class="list-group-item"><a href="{{this.id}}">{{this.title}}</a></li>
                        {{/each}}
                        <!--/-->
                    </ul>
                </div>
            </div>
        </div>


        <!-- DELETE -->
        <div class="col-md-3">
            <h1>DELETE</h1>
            <div class="card">
                <div class="card-body">

                    <!--liste element-->
                    <ul class="list-group list-group-flush">
                        <!--boucle-->
                        {{#each product}}
                        <li class="list-group-item">
                            <!--permet d'afficher le title->
                            {{this.title}}
                            <!--form deleteOne de la method POST-->
                            <form action="{{this._id}}/?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger btn-sm">Effacer</button>
                            </form>
                        </li>
                        {{/each}}
                    </ul>

                    <!--form delete de la method POST-->
                    <form action="/?_method=DELETE" method="POST">
                        <div style="margin-top: 1rem">
                            <button type="submit" class="btn btn-danger btn-sm">Effacer tout</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>